<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_load_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载本地图片"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_load_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载网络图片"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载gif"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载bitmap"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载圆角图片"
        android:textAllCaps="false"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_bg_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置背景颜色为白色"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_bg_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置背景颜色为黑色"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>