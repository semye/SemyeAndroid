<resources>

    <!-- 白色主题   -->
    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <!-- 黑色主题   -->
    <style name="AppTheme2" parent="Theme.AppCompat" />

    <!-- 随主题变化切换白天黑夜主题  默认为Light主题  -->
    <style name="AppTheme3" parent="Theme.AppCompat.DayNight" >
<!--        <item name="android:windowIsFloating">true</item>-->
    </style>


    <style name="FitSystemWindow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="toolbarStyle">@style/SemyeToolbar</item>
        <item name="actionOverflowButtonStyle">@style/ActionMenuTextSize</item>
    </style>

    <style name="SemyeToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextSize</item>
    </style>

    <style name="ActionMenuTextSize" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>


    <style name="AppTextAppearance" parent="TextAppearance.AppCompat" />

</resources>
